# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/digitaltwin
DATABASE_POOL_SIZE=10

# AI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# Security - Arcjet
ARCJET_API_KEY=your-arcjet-key-here
ARCJET_SITE_KEY=your-site-key-here

# Application Settings
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Session & Authentication
SESSION_SECRET=your-session-secret-here
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=24h

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# MCP Tools
MCP_ENABLED=true
MCP_BLOG_ENDPOINT=/api/mcp/blog
MCP_PROJECT_ENDPOINT=/api/mcp/project

# Email (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@digitaltwin.team
SMTP_PASS=your-smtp-password-here

# Analytics (Optional)
ANALYTICS_ENABLED=true
ANALYTICS_DASHBOARD_URL=/dashboard/analytics
